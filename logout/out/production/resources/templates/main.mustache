<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<button onclick="deleteUser()">탈퇴하기</button>

<script>
    function deleteUser() {
      fetch('/api/user/me', {
        method: 'DELETE',
        credentials: 'include'
      })
      .then(res => {
        if (res.ok) {
          alert('탈퇴 완료');
          window.location.href = '/'; // 탈퇴 후 이동할 페이지
        } else {
          alert('탈퇴 실패');
        }
      });
    }
</script>
</body>
</html>